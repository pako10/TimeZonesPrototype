<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDia"
        android:layout_alignParentTop="true"
        android:hint="Dia de hoy"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMes"
        android:hint="Mes"
        android:layout_below="@+id/etDia"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etA単o"
        android:hint="A単o"
        android:layout_below="@+id/etMes"
        android:layout_alignEnd="@+id/etDia"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etHora"
        android:hint="Hora"
        android:layout_below="@+id/etA単o"
        android:layout_alignEnd="@+id/etDia"
        android:layout_alignStart="@+id/etA単o" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etZonaHoraria"
        android:hint="Zona Horaria"
        android:layout_below="@+id/etHora"
        android:layout_alignStart="@+id/etHora" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisar Hora"
        android:id="@+id/btRevisar"
        android:layout_below="@+id/etGmt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etGmt"
        android:hint="Zona gmt"
        android:layout_below="@+id/etZonaHoraria"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMeridiano"
        android:hint="Hora meridiano"
        android:layout_below="@+id/etGmt"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etVerano"
        android:hint="Horario de Verano"
        android:layout_below="@+id/etMeridiano"
        android:layout_alignParentStart="true" />

</RelativeLayout>
